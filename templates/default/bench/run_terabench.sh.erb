TIMES=3
counter=0

while [  $counter -lt $TIMES ]; do
    echo "Running terabench ${counter}/${TIMES}"
    
    ./teragen.sh $SIZE $ROWS
    sleep 2
    ./terasort.sh $SIZE
    sleep 2
    ./teravalidate.sh $SIZE
    sleep 2
    
    let counter+=1
done


