#!/bin/bash

BENCH_NODES=(`grep -v "^#" bench_nodes`)

HopsFS_User=<%=node['hops']['hdfs']['user']%>
/usr/bin/parallel-ssh -H "${BENCH_NODES[*]}"  -l ${HopsFS_User} -i  pkill nmon

for i in ${BENCH_NODES[@]}
do
	connectStr="$HopsFS_User@$i"

	scp $connectStr:/tmp/*.nmon $1

done

/usr/bin/parallel-ssh -H "${BENCH_NODES[*]}"  -l $HopsFS_User -i  "rm /tmp/*.nmon"