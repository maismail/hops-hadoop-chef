then
    mkdir ./$LOGDIR
fi

DATE=`date +%Y-%m-%d:%H:%M:%S`

RESULTSFILE="./$LOGDIR/teravalidate_results_$DATE"


OUTPUT=/data/sandbox/poc/teragen/${SIZE}-terasort-output
REPORT=/data/sandbox/poc/teragen/${SIZE}-terasort-report


# teravalidate.sh
