source <%=node['hops']['conf_dir']%>/hadoop-env.sh 
export PATH=<%=node['hops']['bin_dir']%>:$PATH

#SIZE=500G
#ROWS=5000000000

#SIZE=100G
#ROWS=1000000000

# SIZE=1T
# ROWS=10000000000

#SIZE=10G
#ROWS=100000000

SIZE=1G
ROWS=10000000


LOGDIR=logs

if [ ! -d "$LOGDIR" ]
then
    mkdir ./$LOGDIR
fi

DATE=`date +%Y-%m-%d:%H:%M:%S`

RESULTSFILE="./$LOGDIR/teragen_results_$DATE"


MR_EXAMPLES_JAR=<%= node['hops']['share_dir']%>/mapreduce/hadoop-mapreduce-examples-*.jar
OUTPUT=/data/sandbox/poc/teragen/${SIZE}-terasort-input

# teragen.sh
# Kill any running MapReduce jobs
mapred job -list | grep job_ | awk ' { system("mapred job -kill " $1) } '
# Delete the output directory
hadoop fs -rm -r -f -skipTrash ${OUTPUT}

# Run teragen
time hadoop jar $MR_EXAMPLES_JAR teragen \
-Dmapreduce.map.output.compress=true \
-Dmapreduce.map.output.compress.codec=org.apache.hadoop.io.compress.Lz4Codec \
-Dmapreduce.job.maps=30 \
-Dmapreduce.job.reduces=15 \
${ROWS} ${OUTPUT} &> ${RESULTSFILE} 